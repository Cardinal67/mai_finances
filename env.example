# Database Configuration
POSTGRES_USER=financeapp
POSTGRES_PASSWORD=changeme_strong_password
POSTGRES_DB=finance_manager
DATABASE_URL=postgresql://financeapp:changeme_strong_password@postgres:5432/finance_manager

# Backend Configuration
NODE_ENV=production
PORT=3001
JWT_SECRET=changeme_generate_long_random_string_here_min_32_characters
JWT_EXPIRES_IN=7d

# Encryption (MUST be exactly 32 characters for AES-256)
ENCRYPTION_KEY=changeme32characterkeyforAES256

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001/api

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Application Settings
DEFAULT_CURRENCY=USD
DEFAULT_TIME_HORIZON_DAYS=30
DEFAULT_SAFETY_BUFFER=100

# Timezone (for scheduled jobs)
TZ=America/New_York

# CORS (comma-separated origins)
CORS_ORIGIN=http://localhost:3000,http://localhost

# Security
SESSION_SECRET=changeme_another_long_random_string

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

